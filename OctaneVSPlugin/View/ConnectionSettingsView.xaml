<UserControl x:Class="MicroFocus.Adm.Octane.VisualStudio.View.ConnectionSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MicroFocus.Adm.Octane.VisualStudio.View"
             mc:Ignorable="d">
    <ScrollViewer VerticalScrollBarVisibility="Visible">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="100"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="130"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="10"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
            </Grid.RowDefinitions>

            <Label Grid.Row="0"
                   Content="ALM Octane Settings"
                   FontWeight="Bold" />

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"></ColumnDefinition>
                    <ColumnDefinition Width="7*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="10" />
                </Grid.RowDefinitions>
                <Label Grid.Row="0"
                       Grid.Column="0"
                       Content="Server URL:" />
                <TextBox Grid.Row="0"
                         Grid.Column="1"
                         Name="serverUrlTextBox"
                         Margin="5"
                         TextWrapping="NoWrap"
                         TextChanged="serverUrlTextBox_TextChanged"
                         Text="{Binding Url, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, FallbackValue=Paste server url from browser..}" />

                <Label Grid.Row="1"
                       Grid.Column="0"
                       Content="Space:" />
                <TextBox Grid.Row="1"
                         Grid.Column="1"
                         Name="sharedSpaceTextBox"
                         Margin="5"
                         TextWrapping="NoWrap"
                         Text="{Binding SsId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <Label Grid.Row="2"
                       Grid.Column="0"
                       Content="Workspace:" />
                <TextBox Grid.Row="2"
                         Grid.Column="1"
                         Name="workspaceTextBox"
                         Margin="5"
                         TextWrapping="NoWrap"
                         Text="{Binding WsId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <Separator Grid.ColumnSpan="2"
                           Grid.Row="3" />
            </Grid>
            <Label Grid.Row="2"
                   Content="Authentication"
                   FontWeight="Bold" />

            <Grid Grid.Row="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="60" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="10" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <RadioButton Grid.Row="0"
                        Name="userPassRadioButton"
                        IsChecked="{Binding CredentialLogin, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        VerticalAlignment="Center"
                        Margin="5" />
                <Label Grid.Row="0"
                       Grid.Column="0"
                       Margin="20 0 0 0"
                       VerticalAlignment="Center"
                       Content="Login with username and password" />
                <Label Grid.Row="0"
                       Grid.Column="1"
                       Margin="0"
                       FontWeight="Bold"
                       Foreground="CadetBlue"
                       VerticalAlignment="Center"
                       Content="?">
                    <Label.ToolTip>
                        <TextBlock>
                                Log into ALM Octane directly with your user name and password, in non-SSO environments.
                                <LineBreak/>
                                This method saves your login credentials between sessions, so you do not have to re-enter them.
                        </TextBlock>
                    </Label.ToolTip>
                </Label>
                <Grid Grid.Row="1" Grid.ColumnSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"></ColumnDefinition>
                        <ColumnDefinition Width="7*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0"
                           Grid.Column="0"
                           Margin="25 0 0 0"
                           Content="Username:" />
                    <TextBox Grid.Row="0"
                             Grid.Column="1"
                             Name="usernameTextBox"
                             IsEnabled="{Binding IsChecked, ElementName=userPassRadioButton, UpdateSourceTrigger=PropertyChanged}"
                             Margin="5"
                             Text="{Binding User, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                    <Label Grid.Row="1"
                           Grid.Column="0"
                           Margin="25 0 0 0"
                           Content="Password:" />
                    <PasswordBox Grid.Row="1"
                                 Grid.Column="1"
                                 Name="passwordTextBox"
                                 Margin="5"
                                 IsEnabled="{Binding IsChecked, ElementName=userPassRadioButton, UpdateSourceTrigger=PropertyChanged}"
                                 PasswordChanged="PasswordBox_PasswordChanged" />
                </Grid>

                <RadioButton Grid.Row="2"
                             Name="browserRadioButton"
                             VerticalAlignment="Center"
                             IsChecked="{Binding SsoLogin, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Margin="5" />
                <Label Grid.Row="2"
                       Margin="20 0 0 0"
                       VerticalAlignment="Center"
                       Content="Login using a browser" />
                <Label Grid.Row="2"
                       Grid.Column="1"
                       Margin="-70"
                       FontWeight="Bold"
                       Foreground="CadetBlue"
                       VerticalAlignment="Center"
                       Content="?">
                       <Label.ToolTip>
                            <TextBlock>
                                Log into ALM Octane using a browser.
                                <LineBreak/>
                                You can use this method for non-SSO, SSO, and federated environments.
                                <LineBreak/>
                                Your login credentials are not saved between sessions, so you will have to re-enter them each time.
                            </TextBlock>         
                       </Label.ToolTip>
                </Label>            
                <Separator Grid.ColumnSpan="2"
                           Grid.Row="4" />
            </Grid>
            <Button  Grid.Row="4"
                     Content="Test Connection"
                     Margin="5"
                     Width="150"
                     Click="TestConnection"
                     HorizontalAlignment="Left" />
            <Label Grid.Row="5">
                <TextBlock Name="InfoLabel"  
                            TextWrapping="Wrap"
                            Height="30"
                            MinWidth="200">
                </TextBlock>
            </Label>
            <Separator Grid.Row="6" />
            <Button  Grid.Row="7"
                     Content="Clear settings"
                     Click="ClearSettings"
                     Width="150"
                     HorizontalAlignment="Left"
                     Margin="5" />
        </Grid>
    </ScrollViewer>
</UserControl>
